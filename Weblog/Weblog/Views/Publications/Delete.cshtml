@model Weblog.Models.Publication

@{
    ViewData["Title"] = "Delete";
}

<h3>Seguro que desea eliminar esta publicación?</h3>
<div class="w-100">
    <h4>@Model.Title      <small class="text-muted sm">@Model.Date.ToShortDateString()</small></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Imagen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            Cuerpo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
        <dt class = "col-sm-2">
           Author
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
    </dl>

    <div class="m-3">
        <form class="w-100" asp-action="Delete">
            <input class="w-100" type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger w-100" />
        </form>
    </div>

    <div>
        <a asp-action="Index" asp-controller="Home">Volver al menú</a>
    </div>

</div>
