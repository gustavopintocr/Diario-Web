@model Weblog.Models.DTOs.Homepage

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <title>Diario Web</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Carga la vista parcial inicialmente
            loadPartialView(1);

            // Maneja el evento de clic en los enlaces de paginación
            $(document).on('click', '.pagination-link', function (e) {
                e.preventDefault();

                var pageNumber = $(this).data('page');

                // Carga la vista parcial de la página seleccionada
                loadPartialView(pageNumber);
            });
        });

        $(document).ready(function () {
            $('.view-comments').on('click', function (e) {
                e.preventDefault();

                var publicationId = $(this).data('publication-id');

                // Realiza una solicitud Ajax para obtener los comentarios de la publicación
                $.ajax({
                    url: '/Publication/Comments',
                    type: 'GET',
                    data: { publicationId: publicationId },
                    success: function (data) {
                        // Limpia la lista de comentarios
                        $('#comments-list').empty();

                        // Agrega cada comentario a la lista
                        $.each(data, function (index, comment) {
                            $('#comments-list').append('<li>' + comment.Body + '</li>');
                        });

                        // Muestra el pop-up de comentarios
                        $('#comments-popup').show();
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            });

            // Cierra el pop-up al hacer clic en cualquier parte fuera de él
            $(document).on('click', function (e) {
                if (!$(e.target).closest('#comments-popup').length) {
                    $('#comments-popup').hide();
                }
            });
        });

        function loadPartialView(pageNumber) {
            var pageSize = 5; // Número de elementos por página

            $.ajax({
                url: '/Home/Pages',
                type: 'GET',
                data: { page: pageNumber },
                success: function (data) {
                    // Actualiza el contenido de las publicaciones con los nuevos resultados
                    $('#partialViewContainer').html(data);

                    // Actualiza los enlaces de paginación activando el enlace correspondiente
                    $('#pagination').find('.pagination-link').removeClass('active');
                    $('#pagination').find('[data-page="' + pageNumber + '"]').addClass('active');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
    </script>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-9 left-section">
                <div id="partialViewContainer">
                    <div id="partialViewContainer"></div>
                </div>
                <div id="comments-popup" class="popup-container">
                    <div class="popup-content">
                        <h3>Comentarios</h3>
                        <ul id="comments-list"></ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 right-section">
                <h4>Autores</h4>
                <ul class="list-group">
                    @foreach (var author in Model.Authors)
                    {
                        <li class="list-group-item"><a class="category-link" href="#">@author</a></li>
                    }
                </ul>

                <h4 class="mt-4">Categorías</h4>
                <ul class="list-group">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="list-group-item"><a class="category-link" href="#">@category.Name</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    

</body>
</html>