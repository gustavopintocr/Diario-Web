@using PagedList
@using PagedList.Mvc
@using X.PagedList.Mvc

@model IPagedList<Publication> 

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Diario Web</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            @if(Model is not null){
                @foreach (var item in Model)
                {
                    <div class="col-lg-9 left-section">
                        <div class="post">
                            <h2 class="post-title">@item.Title</h2>
                            <p class="text-muted">@item.Date</p>
                            <img src="@item.Image" alt="Imagen de la publicación" class="img-fluid mb-2">
                            <p class="post-summary">@item.Header</p>
                            <p class="text-muted">
                                Autor: <a class="author-link" href="#">@item.UserId</a>
                            </p>
                            <a href="#" class="btn btn-primary">Leer más</a>
                        </div>
                    </div>
                }
            }
            <div class="col-lg-3 right-section">
                <h4>Autores</h4>
                <ul class="list-group">
                    @if (ViewBag.Autores is not null)
                    {
                        @foreach (var autor in ViewBag.Autores)
                        {
                            <li class="list-group-item"><a class="author-link" href="#">@autor</a></li>
                        }
                    }
                </ul>

                <h4 class="mt-4">Categorías</h4>
                <ul class="list-group">
                    @*@foreach (var categoria in ViewBag.Categorias)
                    {
                        <li class="list-group-item"><a class="category-link" href="#">@categoria</a></li>
                    }*@
                </ul>
            </div>
        </div>
    </div>

