<!DOCTYPE html>
<html>
<head>
    <title>Diario Web</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-9 left-section">
                @foreach (var publication in ViewBag.Publications)
                {
                    <div class="post">
                        <h2 class="post-title">@publication.Title</h2>
                        <p class="text-muted">@publication.Date</p>
                        <img src="" alt="Imagen de la publicación" class="img-fluid mb-2">
                        <p class="post-summary">@publication.Body</p>
                        <p class="text-muted">
                            Autor: <a class="author-link" href="#">Nombre del autor</a>
                            | <a href="#">Ver comentarios (X)</a>
                        </p>
                        <a href="#" class="btn btn-primary">Leer más</a>
                    </div>
                }
                <nav aria-label="Paginación">
                    <ul class="pagination" id="pagination">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
                        </li>
                        @for (var i = 1; i <= Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize); i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link pagination-link" href="#" data-page="@i">@i</a>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="#">Siguiente</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3 right-section">
                <h4>Autores</h4>
                <ul class="list-group">
                    @if (ViewBag.Autores is not null)
                    {
                        @foreach (var autor in ViewBag.Autores)
                        {
                            <li class="list-group-item"><a class="author-link" href="#">@autor</a></li>
                        }
                    }
                </ul>

                <h4 class="mt-4">Categorías</h4>
                <ul class="list-group">
                    @if(ViewBag.Categories != null){
                        @foreach (var category in ViewBag.Categories)
                        {
                            <li class="list-group-item"><a class="category-link" href="#">@category.Name</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

