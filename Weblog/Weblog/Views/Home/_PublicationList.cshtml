@model List<Weblog.Models.Publication>

<div class="container">
    <div class="row">
        @foreach (var publication in Model)
        {
            <div class="col-lg-12">
                <div class="card mb-4 border-rounded">
                    <img src="" alt="Imagen de la publicación" class="card-img-top">
                    <div class="card-body">
                        <h2 class="card-title">@publication.Title</h2>
                        <p class="card-text text-muted">@publication.Date</p>
                        <p class="card-text">@publication.Body</p>
                        <p class="card-text">
                            Autor: <a class="author-link" href="#">Nombre del autor</a>
                            | <a href="#" class="view-comments" data-publication-id="@publication.Id">Ver comentarios</a>
                        </p>
                        <a href="#" class="btn btn-primary">Leer más</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<nav aria-label="Paginación" class="text-center">
    <ul class="pagination" id="pagination">
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="@(ViewBag.CurrentPage == 1 ? "true" : "false")">Anterior</a>
        </li>
        @for (var i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link pagination-link" href="#" data-page="@i">@i</a>
            </li>
        }
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" href="#">Siguiente</a>
        </li>
    </ul>
</nav>
